@model CalculoHonorario.App.ViewModels.AdicionarHonorarioViewModel

<h3>Novo Cálculo</h3>

<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RendaMensal" class="control-label"></label>
                <input asp-for="RendaMensal" class="form-control" />
                <span asp-validation-for="RendaMensal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServicoContabil" class="control-label"></label>
                <input asp-for="ServicoContabil" class="form-control" />
                <span asp-validation-for="ServicoContabil" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SimplesNacional" class="control-label"></label>
                <input asp-for="SimplesNacional" class="form-control" />
                <span asp-validation-for="SimplesNacional" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValorVR" class="control-label"></label>
                <input asp-for="ValorVR" class="form-control" />
                <span asp-validation-for="ValorVR" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValorVT" class="control-label"></label>
                <input asp-for="ValorVT" class="form-control" />
                <span asp-validation-for="ValorVT" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
